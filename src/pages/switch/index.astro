---
import { getCollection } from "astro:content";
import SiteLayout from "../../layouts/SiteLayout.astro";
import "../../styles/global.css";

export const prerender = true;

const title = "Nintendo Switch";
const description = "Carry Tesla Arcade favourites on flights, trains, and family trips with Switch or Switch 2.";

const allGuides = await getCollection("guides");
const guideSlugs = new Set(["switch-2", "budget-upgrade", "controllers"]);
const guides = allGuides.filter((g) => guideSlugs.has(g.slug));

const games = await getCollection("games");
const switchFriendly = games.filter((g) => g.data.platforms.switch?.available).slice(0, 6);
---
<SiteLayout title={`${title} hub`} description={description}>
  <header class="mb-8">
    <a class="text-sm text-[var(--brand-blue)] font-semibold" href="/">â† Back home</a>
    <p class="text-xs uppercase tracking-widest text-slate-500">Platform hub</p>
    <h1 class="text-3xl font-bold mt-2 mb-2 text-[var(--brand-slate)]">Nintendo Switch travel gaming</h1>
    <p class="text-slate-600 max-w-3xl">{description}</p>
  </header>

  <section class="grid gap-6 lg:grid-cols-2">
    <div class="rounded-3xl border border-slate-100 bg-white p-6 shadow-sm">
      <h2 class="text-2xl font-semibold text-[var(--brand-slate)]">Switch perks</h2>
      <ul class="mt-4 space-y-3 text-slate-600">
        <li>ğŸ’ Lightweight, easy for kids and family sharing.</li>
        <li>â˜ï¸ Nintendo Switch Online backs up saves for most indie titles.</li>
        <li>ğŸ® Joy-Con split play instantly recreates Tesla co-op.</li>
      </ul>
    </div>
    <div class="rounded-3xl border border-slate-100 bg-white p-6 shadow-sm">
      <h2 class="text-2xl font-semibold text-[var(--brand-slate)]">Upgrade path</h2>
      <p class="text-slate-600 mt-2">Switch 2 rumours point to OLED screens, DLSS, and better battery life. Start building a digital library now so you can redownload on day one.</p>
      <a href="/guides/switch-2" class="mt-4 inline-flex items-center gap-2 font-semibold text-[var(--brand-blue)]">
        Read the Switch 2 guide â†’
      </a>
    </div>
  </section>

  <section class="mt-12">
    <h2 class="text-2xl font-semibold text-[var(--brand-slate)] mb-4">Helpful guides</h2>
    <ul class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {guides.map((g) => (
        <li class="border border-slate-100 rounded-2xl bg-white shadow-sm hover:shadow-md transition">
          <a href={`/guides/${g.slug}`} class="block p-4">
            <p class="text-xs uppercase tracking-widest text-slate-500">Guide</p>
            <h3 class="text-lg font-semibold text-[var(--brand-slate)] mt-2">{g.data.title}</h3>
            {g.data.short && <p class="text-sm text-slate-600 mt-1 line-clamp-3">{g.data.short}</p>}
          </a>
        </li>
      ))}
    </ul>
  </section>

  <section class="mt-12">
    <div class="flex items-baseline justify-between mb-4">
      <h2 class="text-2xl font-semibold text-[var(--brand-slate)]">Switch-ready games</h2>
      <a href="/games" class="text-sm font-semibold text-[var(--brand-blue)]">Browse library</a>
    </div>
    <ul class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {switchFriendly.map((g) => (
        <li class="border border-slate-100 rounded-2xl bg-white shadow-sm hover:shadow-md transition">
          <a href={`/games/${g.slug}`} class="block p-4">
            <h3 class="font-semibold text-[var(--brand-slate)]">{g.data.title}</h3>
            <p class="text-xs text-slate-500 mt-1">On Nintendo Switch</p>
            {g.data.short && <p class="text-sm text-slate-600 mt-2 line-clamp-3">{g.data.short}</p>}
          </a>
        </li>
      ))}
    </ul>
  </section>
</SiteLayout>
