---
import { getCollection } from "astro:content";
import "../../styles/global.css";

export const prerender = true;

const games = await getCollection("games");
const filtered = games.filter(g =>
  g.data.features.localCoop &&
  g.data.platforms.pc.available &&
  (g.data.platforms.pc.perks.some(p => /cloud/i.test(p)))
);
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Local co-op + PC cloud saves</title>
    <meta name="description" content="Tesla Arcade titles with local co-op and PC cloud saves at home." />
  </head>
  <body class="mx-auto max-w-3xl px-6 py-12">
    <a class="underline text-sm" href="/">‚Üê Back home</a>
    <h1 class="text-3xl font-bold mb-4">Local co-op + PC cloud saves</h1>
    <ul class="list-disc ml-6">
      {filtered.map(g => <li><a class="underline" href={`/games/${g.slug}`}>{g.data.title}</a></li>)}
    </ul>
  </body>
</html>
